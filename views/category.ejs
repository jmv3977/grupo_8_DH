<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/stylesFH.css">
    <title>Vitalcer |  Nombre Categoria</title>
</head>
<body class="bodyCategorias">
    <%- include('partials/header')%>

    <div class='containerLegumbres container-fluid'></div>

    <div class="tituloDivisorCategorias">
        <h1 class="textoTituloCategorias"><%= categories.name %></h1>
    </div>


    <% products.forEach(function(product){ %>

    <div class="containerProductos container-fluid">
        <div class="divCategoriasProductos row">
            
             <figure class =""> 
                <img src="/images/products/<%=product.img%>" alt="imagen de producto">
                
             </figure>  
            <div class="boxL1">
                <a href="/products/detail/<%= product.id %> "></a>
                <h3 class="tituloCategorias"><%= product.name %></h3>
            </div>
            <% }) %>
        </div>
    </div>
    
    <%- include('partials/footer')%> 
</body>
</html>